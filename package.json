{
  "name": "vocal-ai",
  "version": "1.0.0",
  "type": "module",
  "description": "VocalAI - Socratic Critical Thinking oral examination system. Features LLM-driven assessment, emotional state tracking, and RAG-powered content retrieval.",
  "main": "dist/query.js",
  "scripts": {
    "api": "ts-node --transpile-only src/api/server.ts",
    "api:dev": "nodemon --watch src --ext ts --exec ts-node --transpile-only src/api/server.ts",
    "build": "tsc",
    "build:css": "npx tailwindcss -i public/globals.css -o public/output.css --minify",
    "build:css:watch": "npx tailwindcss -i public/globals.css -o public/output.css --watch",
    "start": "node dist/api/server.js",
    "verify-setup": "ts-node src/utils/verify-setup.ts",
    "clean": "rm -rf dist",
    "lint": "tsc --noEmit",
    "ingest-pdfs": "tsx src/workflows/ingest-pdfs.ts",
    "seed-database": "tsx src/workflows/seed-database.ts",
    "chunk": "tsx src/workflows/chunk.ts",
    "vectorize": "tsx src/workflows/vectorize.ts",
    "video-server": "tsx src/workflows/video-server.ts",
    "query": "tsx src/workflows/query.ts"
  },
  "keywords": [
    "education",
    "critical-thinking",
    "ai-assessment",
    "socratic-method",
    "oral-exam",
    "RAG",
    "TypeScript",
    "OpenAI",
    "PostgreSQL",
    "pgvector"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@langchain/core": "^0.3.29",
    "@langchain/langgraph": "^0.2.0",
    "@langchain/langgraph-checkpoint-postgres": "^0.1.0",
    "@langchain/openai": "^0.3.0",
    "@mozilla/readability": "^0.6.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.0",
    "@types/pdf-parse": "^1.1.5",
    "@types/pdfkit": "^0.17.3",
    "@types/pg": "^8.15.4",
    "@types/socket.io": "^3.0.1",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "glob": "^11.0.3",
    "helmet": "^8.1.0",
    "hume": "^0.15.6",
    "jsdom": "^27.2.0",
    "mammoth": "^1.11.0",
    "markdown-it": "^14.1.0",
    "multer": "^2.0.2",
    "openai": "^6.9.1",
    "p-queue": "^9.0.0",
    "pdf-parse": "^2.3.0",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "pgvector": "^0.2.0",
    "socket.io": "^4.8.1",
    "tsx": "^4.20.6",
    "typescript": "^5.3.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@types/jsdom": "^27.0.0",
    "@types/markdown-it": "^14.1.2",
    "autoprefixer": "^10.4.22",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "ts-node": "^10.9.0"
  }
}
